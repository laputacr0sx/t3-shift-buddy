generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shift {
  id         String  @id @default(uuid())
  dutyNumber String
  bNL        String
  bNT        String
  bFT        String
  bFL        String
  duration   String
  remarks    String
  staffId    String?
}

model WeekPrefix {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  weekNumber Int      @unique
  prefixes   String[]
}

enum Location {
  HUH
  SHT
  SHS
  LOW
  HTD
  TWD
  TAW
  FTRH
}

enum Area {
  KLN
  SHS
  ENT
  SPC
}
