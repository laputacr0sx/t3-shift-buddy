generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WeekDuty {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  duty      Shifts[]
  staffId   String

  @@index([staffId])
}

model Staff {
  id          String  @id @default(uuid())
  staffNumber String
  nickName    String?
  defaultArea Area?

  currentRosterRow Int
}

enum Area {
  KLN
  SHS
  ENT
  SPC
}

model Shifts {
  id         String    @id @default(uuid())
  dutyNumber String
  bNL        String
  bNT        String
  bFT        String
  bFL        String
  duration   String
  remarks    String
  WeekDuty   WeekDuty? @relation(fields: [weekDutyId], references: [id])
  weekDutyId String?
}

model WeekPrefix {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  weekNumber Int
  prefixes   String[]
}

enum Location {
  HUH
  SHS
  LOW
  HTD
  TWD
}
